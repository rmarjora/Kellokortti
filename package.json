{
  "name": "kellokortti",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "react-dev": "vite",
    "electron-dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently \"npm run react-dev\" \"npm run electron-dev\"",
    "build": "vite build",
    "start": "electron .",
    "build:electron": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "electron-store": "^10.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "vite": "^7.1.3"
  },
  "build": {
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": true
  }
}